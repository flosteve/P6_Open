{% extends 'base.html.twig' %}

{% block body %}

    <div class="page-header header-filter" data-parallax="true" style="background-image: url('{{ asset('img/list.jpg') }}');">
        <div class="container">
            <div class="row">
                <div class="col-md-8 ml-auto mr-auto">
                    <div class="brand">
                        <h1>Profil Utilisateur</h1>
                        <h3>Profil</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="main main-raised">
        <div class="profile-content">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 ml-auto mr-auto">
                        <div class="profile">
                            <div class="name">
                                <h3 class="title">{{ user.username }}</h3><br>
                            </div>
                        </div>
                        <div class="card card-nav-tabs text-center">
                            <div class="card-header card-header-primary">
                                Informations
                            </div>
                            <div class="card-body">
                                <h4 class="card-text"><strong>Email:</strong> {{ user.email }}</h4>
                                <h4 class="card-text"><strong>Congregation: </strong>{{ user.congregation }}</h4>
                                <h4 class="card-text"><strong>Telephone: </strong></h4>
                                <div>
                                    <a href="{{ url('user_edit', {user: user.id}) }}" class="btn btn-primary">Modifier cet utilisateur</a>
                                    <a href="{{ url('user_list') }}" class="btn btn-warning">Retour Ã  la liste</a>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}